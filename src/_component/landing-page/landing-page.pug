-
  var myFullName = 'Antonio Radosav'
  var myJobTitle = 'Junior Web Developer'
  var socialList = [
    {icon: 'linkedin', url: 'https://www.linkedin.com/in/radosav-antonio-408713a0'},
    {icon: 'github', url: 'https://github.com/RadosavAntonio'},
    {icon: 'facebook', url: 'https://www.facebook.com/antonioradosav'},
    {icon: 'twitter', url: 'https://twitter.com/AntonioRadosav'},
    {icon: 'google', url: 'radosav.antonio@gmail.com'},
  ]
#landing-page
.landing-page
  .landing-page__wrapper
    h1.landing-page__name=myFullName
    h2.landing-page__title=myJobTitle
    ul.landing-page__social
      each social, key in socialList
        li.landing-page__item
          label.landing-page__label(for=`message-box-id-${key}`)
            span(class=`my-cv__icon--${social.icon}`)
    .landing-page__box-body
      input.landing-page__box-radio(type="radio", name="cool-radio", checked, id="default")
      .landing-page__box-message Click the above icons to reveal!
      .landing-page__box-header
        .landing-page__box-info Click to visit!
        label.landing-page__box-close(for="default") &times;
      each social, key in socialList
        input.landing-page__box-radio(type="radio", name="cool-radio", id=`message-box-id-${key}`)
        .landing-page__box-message
          a.landing-page__box-link(href=social.url, target="_blank")=social.url